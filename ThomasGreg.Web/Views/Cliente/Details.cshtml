@using ThomasGreg.Application.Responses
@model ClienteResponse

<div class="container mt-4">
    @if (Model != null)
    {
        ViewData["Title"] = Model.Nome;
        ViewData["ClienteId"] = Model.Id;

        

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@Model.Nome</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">Email:</dt>
                    <dd class="col-sm-10">@Model.Email</dd>
                    <dt class="col-sm-2">Logotipo:</dt>
                    <dd class="col-sm-10">
                        <img src='@($"data:image/png;base64,{Model.Logotipo}")' style="max-width:200px;max-height:250px" alt="Logotipo do Cliente" />
                    </dd>
                </dl>
                <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Atualizar Cliente</a>
            </div>
        </div>

        <div class="mt-4">
            @Html.Partial("LogradouroPartial", ViewData)
        </div>

    }
    else
    {
        <p class="alert alert-warning">Cliente não encontrado.</p>
    }
</div>
